---
import Card from "@components/Card";
import Layout from "@layouts/Layout.astro";
import Header from "@components/Header.astro";
import Hr from "@components/Hr.astro";
import Footer from "@components/Footer.astro";
import Tag from "@components/Tag.astro";
import Datetime from "@components/Datetime";
import slugify from "@utils/slugify";
import type { CollectionEntry } from "astro:content";

export interface Props {
  post: CollectionEntry<"blog">;
  similarPosts: CollectionEntry<"blog">[];
}

const { post, similarPosts } = Astro.props;

const { title, author, description, ogImage, date_published, tags } = post.data;

const { Content } = await post.render();

const ogUrl = new URL(ogImage ? ogImage : `${title}.png`, Astro.url.origin)
  .href;
---

<Layout title={title} author={author} description={description} ogImage={ogUrl}>
  <Header />
  <main id="main-content">
    <h1 class="post-title">{title}</h1>
    <Datetime datetime={date_published} size="lg" className="my-2" />
    <article id="article" role="article" class="prose mx-auto mt-8 max-w-3xl">
      <Content />
    </article>

    <ul class="tags-container">
      {tags.map(tag => <Tag name={tag} />)}
    </ul>
    {
      similarPosts.length > 0 && (
        <>
          <Hr noPadding={true} />
          <aside class="similar-posts">
            <h2>Similar posts</h2>
            <ul>
              {similarPosts.map(({ data }) => (
                <Card href={`/posts/${slugify(data)}`} frontmatter={data} />
              ))}
            </ul>
          </aside>
        </>
      )
    }
  </main>
  <Footer />
</Layout>

<style>
  main {
    @apply mx-auto w-full max-w-3xl px-4 py-12;
  }
  .post-title {
    @apply text-4xl font-semibold text-skin-accent;
  }
  .tags-container {
    @apply my-8;
  }
  .similar-posts {
    @apply pt-8;
  }
  .similar-posts h2 {
    @apply text-3xl font-semibold sm:text-2xl;
  }
</style>
